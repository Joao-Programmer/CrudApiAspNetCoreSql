@model CrudApiAspNetCoreSql.Models.Category

@{
    ViewData["Title"] = "Create";
}

<body onload="$dc.loadTitle('Category - Create', '#divTitle');">
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Short Name</label>
                    <input asp-for="CategoryShortName" class="form-control" required="required" />
                    <span asp-validation-for="CategoryShortName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input asp-for="CategoryName" class="form-control" required="required" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Special Instructions</label>
                    <input asp-for="CategorySpecialInstructions" class="form-control" />
                    <span asp-validation-for="CategorySpecialInstructions" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Image Path</label>
                    <input asp-for="CategoryImagePath" class="form-control" />
                    <span asp-validation-for="CategoryImagePath" class="text-danger"><input type="file" name="ImageFile" required /> <i class="fas fa-folder-open fa-2x"></i></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


    <div class="images text-center">
        <div class="container">            
            <p>Image</p>
        </div>

        @{
            string imagePathLoad = @"images\noImageFound.jpg";
            <img class="img-fluid img-thumbnail imgCategory" src="~/@imagePathLoad" />
        }

    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
