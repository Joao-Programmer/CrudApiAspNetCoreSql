@model CrudApiAspNetCoreSql.Models.Category

@{
    ViewData["Title"] = "Edit";
}

@{ WebImage photo = null;
    photo = WebImage.GetImageFromRequest();

    if (photo != null)
    {
        string imagePath = @"images\menu\" + Model.CategoryShortName + "\\" + Model.CategoryShortName + ".jpg";
        photo.Save(@"~\" + imagePath);
    }
    else
    {
        string imagePath = @"images\noImageFound.jpg";
        photo.Save(@"~\" + imagePath);
    }

    <body onload="$dc.loadTitle('Category - Edit', '#divTitle');">
        <hr />

        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CategoryId" />
                    <div class="form-group">
                        <label class="control-label">Short Name</label>
                        <input asp-for="CategoryShortName" class="form-control" disabled="disabled" />
                        <span asp-validation-for="CategoryShortName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Special Instructions</label>
                        <input asp-for="CategorySpecialInstructions" class="form-control" />
                        <span asp-validation-for="CategorySpecialInstructions" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="images text-center">
            <div class="container">
                <p>Image (*.jpg)&nbsp; <i class="fas fa-folder-open fa-2x"></i></p>
            </div>

            @{string imagePathStart = "images/noImageFound.jpg";}
            <img class="img-fluid img-thumbnail imgCategory" src="~/@imagePathStart" />
        </div>

        <div>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>

    </body>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
