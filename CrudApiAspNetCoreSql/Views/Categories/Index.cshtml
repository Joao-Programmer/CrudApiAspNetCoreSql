@model IEnumerable<CrudApiAspNetCoreSql.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<body onload="$dc.loadTitle('Category - Index', '#divTitle');">
    <hr />

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <form asp-action="Index" method="get">
        <div class="form-group">
            <p>
                Find by Name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]"/>
                <input type="submit" value="Search" class="btn btn-secondary" />
                <a asp-action="Index">Back to Full List</a>
            </p>            
        </div>

    </form>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["IdSortParm"]">ID</a>
                </th>
                <th>
                    Short Name
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Name</a>
                </th>
                <th class="displayNoneMax768">
                    Special Instructions
                </th>
                <th class="displayNoneMax768">
                    Url
                </th>
                <th class="displayNoneMax768">
                    Create Date
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryShortName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td class="displayNoneMax768">
                        @Html.DisplayFor(modelItem => item.CategorySpecialInstructions)
                    </td>
                    <td class="displayNoneMax768">
                        @Html.DisplayFor(modelItem => item.CategoryUrl)
                    </td>
                    <td class="displayNoneMax768">
                        @Html.DisplayFor(modelItem => item.CategoryCreateDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoryId">    <i class="fa fa-pencil-alt fa-sm"></i></a>
                        <a asp-action="Details" asp-route-id="@item.CategoryId"> <i class="fa fa-search fa-sm"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId">  <i class="fa fa-trash-alt fa-sm"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>