        <input type="hidden" asp-for="MenuItemID" />
        <input type="submit" value="Delete" class="btn btn-danger" />        
    </form>
    <div class="marginTop10px">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
