@model CrudApiAspNetCoreSql.Models.User

@{
    ViewData["Title"] = "Delete";
}

<body onload="$dc.loadTitle('User - Delete', '#txtTitle');">
    <hr />

    <h3>Are you sure you want to delete this?</h3>
    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2 text-right">
                Full Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserFullName)
            </dd>
            <dt class="col-sm-2 text-right">
                Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2 text-right">
                Email:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserEmail)
            </dd>
            <dt class="col-sm-2 text-right">
                Create Date:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserCreateDate)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="UserId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <div class="marginTop10px">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</body>