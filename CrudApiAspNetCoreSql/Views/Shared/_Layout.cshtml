<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant API</title>

    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/Styles.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <partial name="_CookieConsentPartial" />

    <div class="container body-content">

        <div id="headerDiv" class="row">
            <div id="itemLeftHeaderDiv" class="col-2">
                @*@Html.ActionLink("Home", "Menu", "Token", null, new { @class = "btn btn-outline-info btn-sm" })*@
                @Html.ActionLink("", "Menu", "Token", null, new { @class = "fas fa-home fa-3x" })
                
            </div>
            <div id="itemRightHeaderDiv" class="col-10">
                <div>
                    @{
                        var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;

                        if (claimsIdentity != null)
                        {
                            var name = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.Name);

                            if (name != null)
                            {
                                <p>
                                    User: <span>
                                        @name.Value.ToString()
                                        &nbsp;&nbsp;&nbsp;
                                    </span>
                                    @Html.ActionLink("Log Off", "Logoff", "Token", null, new { @class = "btn btn-outline-danger btn-sm" })
                                </p>
                            }
                        }
                    }

                </div>
            </div>
        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2021 - Restaurant API</p>
        </footer>
    </div>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/jquery.inputmask.js"></script>
    <script src="~/js/Script.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
