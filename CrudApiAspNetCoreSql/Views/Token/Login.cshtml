@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center title">Login</h1>

<hr />
<div class="row text-center">
    <div class="col-md-6">
            <form onsubmit="event.preventDefault()" class="loginBox">
                <p class="font-weight-bold"> Please enter your login and password!</p> <input type="text" name="" placeholder="Username"> <input type="password" name="" placeholder="Password"> <input type="submit" name="" value="Login" href="#">
            </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}